@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>SignalR Restoran Kayıt</title>
    <!-- Mobile Specific Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <!-- Font-->
    <link rel="stylesheet" type="text/css" href="~/colorlib/css/nunito-font.css">
    <!-- Main Style Css -->
    <link rel="stylesheet" href="~/colorlib/css/style.css" />
</head>
<body class="form-v6">
    <div class="page-content">
        <div class="form-v6-content">
            <div class="form-left">
                <img src="~/colorlib/images/Sauce1.jpg" width="484" height="584" >
            </div>
            <form class="form-detail" method="post">
                <h2>Yeni Kullanıcı Kaydı</h2>
                <div class="form-row">
                    <input type="text" id="full-name" asp-for="Name" class="input-text" placeholder="Adınız">
                </div>
                <div class="form-row">
                    <input type="text" id="full-name" asp-for="Surname" class="input-text" placeholder="Soyadınız">
                </div>
                <div class="form-row">
                    <input type="text" id="full-name" asp-for="Username" class="input-text" placeholder="Kullanıcı Adınız">
                </div>
                <div class="form-row">
                    <input type="text" id="your-email" asp-for="Mail" class="input-text" placeholder="Email Adresiniz">
                </div>
                <div class="form-row">
                    <input type="password" id="password" asp-for="Password" class="input-text" placeholder="Şifreniz">
                </div>
                <button>Kayıt Ol</button>
            </form>
        </div>
    </div>
</body>
</html>
