@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İletişim Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Location">Lokasyonu Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Location" id="Location">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Telefon Numarası Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Phone" id="Phone">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Mail" id="Mail">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Footer Başlık</label>
                                <input type="text" class="form-control" asp-for="FooterTitle" id="Phone">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Açık Günler</label>
                                <input type="text" class="form-control" asp-for="OpenDays" id="Phone">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Açık Saatler</label>
                                <input type="text" class="form-control" asp-for="OpenHours" id="Phone">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Açık Günler Açıklama</label>
                                <input type="text" class="form-control" asp-for="OpenDaysDescription" id="Phone">
                            </div>
                            <div class="form-group">
                                <label for="FDesc">Açıklama Giriniz.</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" id="FDesc"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">İletişim Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


