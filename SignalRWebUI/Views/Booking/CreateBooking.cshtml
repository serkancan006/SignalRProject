@model CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Rezervasyon Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Bookingtitle">Ad Soyad.</label>
                                <input type="text" class="form-control" asp-for="Name" id="Bookingtitle">
                            </div>
                            <div class="form-group">
                                <label for="Bookingimage">Telefon.</label>
                                <input type="text" class="form-control" asp-for="Phone" id="Bookingimage">
                            </div>
                            <div class="form-group">
                                <label for="Bookingdesc">Mail Adresi.</label>
                                <input type="email" class="form-control" asp-for="Mail" id="Bookingdesc" />
                            </div>
                            <div class="form-group">
                                <label for="PersonCount">Kişi Sayısı.</label>
                                <input type="text" class="form-control" asp-for="PersonCount" id="PersonCount" />
                            </div>
                            <div class="form-group">
                                <label for="Date">Rez. Tarihi</label>
                                <input type="datetime-local" class="form-control" asp-for="Date" id="Date" />
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Rezervasyon Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>






