@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Şifre ve Bilgi Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label>Adınız</label>
                                <input type="text" class="form-control" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label>Soyadınız</label>
                                <input type="text" class="form-control" asp-for="Surname">
                            </div>
                            <div class="form-group">
                                <label>Mail Adresiniz</label>
                                <input type="email" class="form-control" asp-for="Mail">
                            </div>
                            <div class="form-group">
                                <label>Kulanıcı Adınız</label>
                                <input type="text" class="form-control" asp-for="Username">
                            </div>
                            <div class="form-group">
                                <label>Şifre</label>
                                <input type="password" class="form-control" asp-for="Password">
                            </div>
                            <div class="form-group">
                                <label>Şifre Tekrar</label>
                                <input type="password" class="form-control" asp-for="ConfirmPassword">
                            </div>
                            <div class="card-action">
                                <button class="btn btn-success">Bilgileri Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

