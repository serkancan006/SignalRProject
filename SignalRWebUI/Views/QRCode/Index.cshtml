
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Qr Kod Oluşturma Sayfası</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="Index" asp-controller="QRCode">
                    <input type="text" name="value" />
                    <input type="submit" value="Qr Kod Oluştur" class="btn btn-warning" />
                    <br /> <br />
                    @if (ViewBag.QrCodeImage != null)
                    {
                        <img src="@ViewBag.QrCodeImage" alt="" width="400" height="400" />
                    }
                    else
                    {
                        <p>Qr Code oluşturulamadı. Değer giriniz!</p>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
