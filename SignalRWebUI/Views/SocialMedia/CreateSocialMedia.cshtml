@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Sosyal Medya Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="SocialMediatitle">Sosyal Medya Başlıgını Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Title" id="SocialMediatitle">
                            </div>
                            <div class="form-group">
                                <label for="SocialMediaIcon">Sosyal Medya İkonu Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Icon" id="SocialMediaIcon">
                            </div>
                            <div class="form-group">
                                <label for="SocialMediaUrl">Sosyal Medya Linki Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Url" id="SocialMediaUrl" />
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Sosyal Medya Hesabı Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>






