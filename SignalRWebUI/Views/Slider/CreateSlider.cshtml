@model CreateSliderDto
@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Öne Çıkan Alan Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Slidertitle1">Birinci Başlıgını Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Title1" id="Slidertitle1">
                            </div>
                            <div class="form-group">
                                <label for="Slidertitle2">İkinici Başlıgını Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Title2" id="Slidertitle2">
                            </div>
                            <div class="form-group">
                                <label for="Slidertitle3">Üçüncü Başlıgını Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Title3" id="Slidertitle3">
                            </div>

                            <div class="form-group">
                                <label for="Description1">Birinci Açıklama Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Description1" id="Description1">
                            </div>
                            <div class="form-group">
                                <label for="Description2">İkinici Açıklama Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Description2" id="Description2">
                            </div>
                            <div class="form-group">
                                <label for="Description3">Üçüncü Açıklama Giriniz.</label>
                                <input type="text" class="form-control" asp-for="Description3" id="Description3">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Öne Çıkan Alan Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

