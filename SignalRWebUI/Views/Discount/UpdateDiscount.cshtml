@model UpdateDiscountDto

@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirimli Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">İndirimli Ürün Güncelle</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="DiscountID" />
                            <div class="form-group">
                                <label for="Discounttitle">Ürün Adı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Discounttitle">
                            </div>
                            <div class="form-group">
                                <label for="Discountamount">Ürün İndirim Oranı Giriniz</label>
                                <input type="text" class="form-control" asp-for="Amoun" id="Discountamount">
                            </div>
                            <div class="form-group">
                                <label for="Discountimg">Ürün Görseli Giriniz </label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="Discountimg" />
                            </div>
                            <div class="form-group">
                                <label for="Discountdesc">Ürün Açıklama Giriniz </label>
                                <input type="text" class="form-control" asp-for="Description" id="Discountdesc" />
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">İndirimli Ürünü Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

